{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true
    },
    "buildOnSave": true,
    "compileOnSave": true,
    "filesGlob": [
        "./**/*.ts",
        "../typings/main.d.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./patch.test.ts",
        "./shell.test.ts",
        "../typings/main.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
